@model IEnumerable<CNPMNC_Project.Models.PHONGBAN>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div style="display:flex;align-items:center;justify-content:space-between;margin:16px 0px 24px 0px">
    <h3 class="title" style="font-weight:700">Phòng ban</h3>
    <div>

        <div class="btn_export btn">
            <i class="fa-solid fa-file-export fa"></i>
            @Html.ActionLink("Export File", "Create")
        </div>
        <div class="btn_import btn">
            <i class="fa-solid fa-file-import fa"></i>
            @Html.ActionLink("Import File", "Create")
        </div>
        <div class="btn_create btn">
            <i class="fa-solid fa-plus fa"></i>
            @Html.ActionLink("Thêm mới", "Create")
        </div>

    </div>

</div>


<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TENPB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TRGPB)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TENPB)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TRGPB)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.MAPB }) |
            @Html.ActionLink("Details", "Details", new { id=item.MAPB }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.MAPB })
        </td>
    </tr>
}

</table>
