@model IEnumerable<CNPMNC_Project.Models.NHANVIEN>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="display:flex;align-items:center;justify-content:space-between;margin:16px 0px 24px 0px">
    <h3 class="title"style="font-weight:700">Nhân viên</h3>
    <div>
        <div class="btn_export btn">
            @using (Html.BeginForm("Export", "NHANVIENs", FormMethod.Post))
            {
                <i class="fa-solid fa-file-export fa"></i>
                <input type="submit" class="btn-success" value="Export File" style="background:none;border:none" />
            }
   
        </div>
        <div class="btn_import btn">
            <i class="fa-solid fa-file-import fa"></i>
            @Html.ActionLink("Import File", "Create")
        </div>
        <div class="btn_create btn">
            <i class="fa-solid fa-plus fa"></i>
            @Html.ActionLink("Thêm mới", "Create")
        </div>
    </div> 
</div>
<div class="form-group">
    @using (Html.BeginForm())
    {
        <p>
            @Html.TextBox("SearchString")
            <input type="submit" value="Search" class="btn btn-primary btn-xs" />
        </p>
    }

</div>
<table class="table table-bordered table-striped">
    <tr>
        <th>
            Mã NV
        </th>
        <th>
            Họ tên
        </th>
        <th>
            Địa chỉ
        </th>
        <th>
            Giới tính
        </th>
        <th>
            Ngày sinh
        </th>
        <th>
            SĐT
        </th>
        <th>
            Chức vụ
        </th>
        <th>
            Phòng ban
        </th>
        <th style="text-align:center">Thao tác</th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.MANV)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.HOTENNV)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DIACHI)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.GIOITINH)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NGAYSINH)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SDT)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CHUCVU.TENCV)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PHONGBAN.TENPB)
    </td>
    <td style="text-align:center">
        @Html.ActionLink("Edit", "Edit", new { id = item.MANV }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.MANV })
    </td>
</tr>
}

</table>
